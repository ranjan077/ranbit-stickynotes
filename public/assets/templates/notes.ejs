<div class="notes-main-container">
	<div class="add-note">
		<!-- <input type="button" value="Add Note" ng-click="addNote()"/> -->
		<a href="" ng-click="addNote()"><span class="fa-lg pull-left"><i class="fa fa-plus-circle fa-6 "></i></span> </a>
	</div>
	<div ng-repeat="note in notes" resize-dragable class="sticky" theme='{{note.noteTheme}}' id="{{note._id}}" style="width:{{note.dimension.width}}; height:{{note.dimension.height}}; left:{{note.position.left}}; top:{{note.position.top}};z-index:{{note.zindex}}">
		<div class="note-header">
			<diV class="note-header-top">
				<div class="note-delete" ng-click="deleteNote($event)">
					<img class="note-delete" src="https://upload.wikimedia.org/wikipedia/commons/8/8d/VisualEditor_-_Icon_-_Close.svg"/>
				</div>
			</div>
			<diV class="note-header-bottom">
				<div class="note-theme">
					<div class="blue" ng-mousedown="changeTheme($event, 'blue')"></div>
					<div class="red" ng-mousedown="changeTheme($event, 'red')"></div>
					<div class="gray" ng-mousedown="changeTheme($event, 'gray')"></div>
					<div class="yellow" ng-mousedown="changeTheme($event, 'yellow')"></div>
				</div>
			</div>
		</div>
		<div class="note-body">
			 <p class="note-content" contentEditable = "true" ondblclick="$(this).focus();" ng-blur="saveNote($event)" ng-bind="note.note"></p>
		</div>
	</div>
</div>