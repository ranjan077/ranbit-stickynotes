<body ng-app="myapp">
    <nav class="navbar navbar-default no-margin">
    <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header fixed-brand">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"  id="menu-toggle">
                      <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
                    </button>
                    <a class="navbar-brand" href="#"><i class="fa fa-rocket fa-4"></i> Sticky Notes</a>
                </div><!-- navbar-header-->
 
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li class="active" ><button class="navbar-toggle collapse in" data-toggle="collapse" id="menu-toggle-2"> <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span></button></li>
                            </ul>
                </div><!-- bs-example-navbar-collapse-1 -->
    </nav>
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav nav-pills nav-stacked" id="menu">
                <li style="margin-top: 10%">
                    <% if (user.facebook && user.facebook.id) {%>
                        <div class="circular allign-center" style="background: url(https://graph.facebook.com/<%= user.facebook.id%>/picture?type=normal) no-repeat;"></div>
                        <div>
                    <% } else {%>
                        <div class="circular allign-center" style="background: url(/assets/img/fb_empty_profilepic.jpg) no-repeat;"></div>
                        <div>
                    <% } %>
                    <span class="logout"><a href="/logout"><h3>Logout</h3></a></span>
                </li>
                
                <li>
                    <a href="#/notes"><span class="fa-stack fa-lg pull-left"><i class="fa fa-sticky-note fa-stack-1x "></i></span> Sticky Note</a>
                </li>
                <li>
                    <a href="#/todo"><span class="fa-stack fa-lg pull-left"><i class="fa fa-check-circle-o fa-stack-1x "></i></span>Sticky Board</a>
                </li>
                
            </ul>
        </div><!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="xyz">
                <div class="row">
                    <div ng-controller="mainController" class="col-lg-12">
                        <div ng-view></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
